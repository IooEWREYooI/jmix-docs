<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://buttonScreen.caption">
    <data>
        <collection id="usersDc" class="ui.ex1.entity.User">
            <fetchPlan extends="_local"/>
            <loader id="usersDl">
                <query>
                    <![CDATA[select e from uiex1_User e]]>
                </query>
            </loader>
        </collection>
    </data>
    <!-- tag::action-1[] -->
    <actions>
        <action id="someAction"
                caption="Click Me!"/>
    </actions>
    <layout>
        <vbox spacing="true">
        <!-- end::action-1[] -->
        <hbox spacing="true">
            <!-- tag::button-1[] -->
            <button id="helloButton"
                    caption="msg://button.caption"
                    description="msg://button.description"/>
            <!-- end::button-1[] -->

            <!-- tag::button-icon[] -->
            <button id="saveButton"
                    caption="Save"
                    icon="SAVE"/>
            <!-- end::button-icon[] -->

            <!-- tag::shortcut[] -->
            <button id="saveButton2"
                    description="Save"
                    icon="SAVE"
                    shortcut="ALT-S"/>
            <!-- end::shortcut[] -->

            <!-- tag::action-2[] -->
            <button action="someAction"/>
            <!-- end::action-2[] -->
            <button id="dependentBtn" caption="Dependent button"/>
            <button id="mainBtn" caption="Main button"/>
        </hbox>

        <!-- tag::expand-ratio[] -->
        <hbox width="500px" expand="button1" spacing="true">
            <button id="button1" box.expandRatio="1"/>
            <button id="button2" width="100%" box.expandRatio="3"/>
            <button id="button3" width="100%" box.expandRatio="2"/>
        </hbox>
        <!-- end::expand-ratio[] -->

        <!-- tag::action-3[] -->
        <table id="usersTable"
               width="100%"
               dataContainer="usersDc">
            <actions>
                <action id="create"
                        type="create"/>
            </actions>
            <buttonsPanel>
                <button id="usersTableCreateBtn"
                        action="usersTable.create"/>
            </buttonsPanel>
            <!-- end::action-3[] -->
            <columns>
                <column id="username"/>
                <column id="email"/>
            </columns>
            <!-- tag::table-end[] -->
        </table>
        <!-- end::table-end[] -->
            <hbox spacing="true">
                <!-- tag::primary-btn[] -->
            <button id="primaryBtn"
                    caption="Primary button"
                    primary="true"/>
                <!-- end::primary-btn[] -->
            <button id="simpleBtn"
                    caption="Simple button"/>
            </hbox>
            <!-- tag::borderless-btn[] -->
            <button id="styledBtn1"
                    caption="Borderless"
                    stylename="borderless"/>
            <!-- end::borderless-btn[] -->
            <button id="styledBtn2"
                    caption="Borderless-colored"
                    stylename="borderless-colored"/>
            <button id="styledBtn3"
                    caption="Danger"
                    stylename="danger"/>
            <button id="styledBtn4"
                    caption="Friendly"
                    stylename="friendly"/>
            <button id="styledBtn6"
                    icon="VIEW_ACTION"
                    caption="Icon-align-right"
                    stylename="icon-align-right"/>
            <button id="styledBtn7"
                    icon="VIEW_ACTION"
                    caption="Icon-align-top"
                    stylename="icon-align-top"/>
            <button id="styledBtn8"
                    icon="VIEW_ACTION"
                    caption="Icon-only"
                    stylename="icon-only"/>
            <button id="styledBtn10"
                    caption="Primary"
                    stylename="primary"/>
            <button id="styledBtn11"
                    caption="Quiet"
                    stylename="quiet"/>
            <hbox spacing="true">
            <!-- tag::icon-set[] -->
            <button icon="PENGUIN"/>
            <!-- end::icon-set[] -->
            <button id="iconButton" height="AUTO"/>
            <!-- tag::icon-theme[] -->
            <button icon="theme:icons/check-mark.png"/>
            <!-- end::icon-theme[] -->
            <!-- tag::icon-file[] -->
            <button icon="file:D:/JMIX/penguin.png"/>
            <!-- end::icon-file[] -->
            <!-- tag::icon-classpath[] -->
            <button icon="classpath:/icon/eye.png"/>
            <!-- end::icon-classpath[] -->
            <!-- tag::custom-icon[] -->
            <button icon="font-awesome5-brands-icon:JAVA"/>
            <!-- end::custom-icon[] -->
                <button id="cIconBtn"/>
                <!-- tag::custom-ok-icon[] -->
                <button caption="Custom" icon="font-icon:CHECK"/>
                <!-- end::custom-ok-icon[] -->
                <button id="oIconBtn"/>
                <button id="okIconBtn"/>
            </hbox>
        </vbox>
        <!-- tag::layout-end[] -->
    </layout>
    <!-- end::layout-end[] -->
</window>
