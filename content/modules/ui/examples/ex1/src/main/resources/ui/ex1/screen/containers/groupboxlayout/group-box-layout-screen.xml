<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://groupBoxLayoutScreen.caption">
    <layout>
        <hbox>
            <!-- tag::group-box-default[] -->
            <groupBox caption="Vertical GroupBox"
                      spacing="true"
                      width="AUTO">
                <label value="Label"/>
                <textField inputPrompt="TextField"/>
                <button caption="Button"/>
                <button caption="Button"/>
            </groupBox>
            <!-- end::group-box-default[] -->

            <label width="20px"/>

            <groupBox caption="Looks as panel GroupBox"
                      showAsPanel="true"
                      stylename="borderless"
                      spacing="true"
                      width="300px">
                <label value="Label"/>
                <textField inputPrompt="TextField" width="100%"/>
                <button caption="Button"/>
                <button caption="Button"/>
            </groupBox>

            <label width="20px"/>

            <groupBox caption="Looks as panel GroupBox"
                      showAsPanel="true"
                      stylename="light"
                      spacing="true"
                      width="300px">
                <label value="Label"/>
                <textField inputPrompt="TextField" width="100%"/>
                <button caption="Button"/>
                <button caption="Button"/>
            </groupBox>

            <label width="20px"/>

            <groupBox caption="Looks as panel GroupBox"
                      showAsPanel="true"
                      stylename="well"
                      spacing="true"
                      width="300px">
                <label value="Label"/>
                <textField inputPrompt="TextField" width="100%"/>
                <button caption="Button"/>
                <button caption="Button"/>
            </groupBox>

            <label width="20px"/>

            <!-- tag::margins[] -->
            <groupBox outerMargin="true, false, true, false"/>
            <!-- end::margins[] -->

            <label width="20px"/>

            <groupBox caption="Horizontal GroupBox"
                      orientation="horizontal"
                      spacing="true"
                      width="AUTO"
                      id="groupBox">
                <label align="MIDDLE_LEFT"
                       value="Label"/>
                <textField inputPrompt="TextField"/>
                <button caption="Button"/>
                <button caption="Button"/>
            </groupBox>

            <label width="20px"/>

            <groupBox caption="GroupBox"
                      collapsable="true"
                      spacing="true"
                      width="300px">
                <label value="Label"/>
                <textField inputPrompt="TextField" width="100%"/>
                <button caption="Button"/>
                <button caption="Button"/>
            </groupBox>

            <label width="20px"/>

            <groupBox caption="GroupBox with 'collapsed=true'"
                      collapsable="true"
                      collapsed="true"
                      spacing="true"
                      width="300px">
                <label value="Label"/>
                <textField inputPrompt="TextField" width="100%"/>
                <button caption="Button"/>
                <button caption="Button"/>
            </groupBox>

            <label width="20px"/>
        </hbox>
    </layout>
</window>