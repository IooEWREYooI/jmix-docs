<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://passwordFieldScreen.caption">
    <layout>
        <vbox spacing="true" margin="true">
            <!-- tag::password-field[] -->
            <passwordField id="passwordField"
                           caption="Secret password field"/>
            <!-- end::password-field[] -->
            <button id="showPasswordBtn"
                    caption="Show password"/>
            <!-- tag::predefined-validator[] -->
            <passwordField id="passwordValidField"
                           caption="Secret password field">
                <validators>
                    <size max="10" min="4"/>
                </validators>
            </passwordField>
            <!-- end::predefined-validator[] -->
            <button id="validateBtn"
                    caption="Validate"/>
        </vbox>
    </layout>
</window>