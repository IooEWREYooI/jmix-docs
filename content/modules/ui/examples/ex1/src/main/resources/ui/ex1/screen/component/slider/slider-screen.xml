<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://sliderScreen.caption">

    <!-- tag::slider[] -->
    <data>
        <instance id="productDc"
                  class="ui.ex1.entity.Product"
                  fetchPlan="_base"/>
    </data>
    <layout>
    <!-- end::slider[] -->

        <!-- tag::slider[] -->
        <slider id="slider"
                dataContainer="productDc"
                property="price"/>
        <!-- end::slider[] -->

        <!-- tag::attributes[] -->
        <slider max="20"
                min="10"
                resolution="2"
                updateValueOnClick="true"
                orientation="vertical"/>
        <!-- end::attributes[] -->

        <!-- tag::slider[] -->
    </layout>
    <!-- end::slider[] -->
</window>
