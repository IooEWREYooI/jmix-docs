<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://maskedFieldScreen.caption">
    <!-- tag::simple[] -->
    <layout spacing="true">
        <maskedField id="maskedField"
                     caption="Phone number"
                     mask="(###) ###-##-##"/>
        <!-- end::simple[] -->
        <hbox spacing="true">
            <maskedField id="phoneFieldMasked"
                         caption="valueMode='masked'"
                         mask="(###) ###-##-##"
                         />
            <button id="showMasked"
                    align="BOTTOM_LEFT"
                    caption="Show value"/>
        </hbox>
        <hbox spacing="true">
            <maskedField id="phoneFieldClear"
                         caption="valueMode='clear'"
                         mask="(###) ###-##-##"
                         />
            <button id="showClear"
                    align="BOTTOM_LEFT"
                    caption="Show value"/>
        </hbox>
        <!-- tag::simple[] -->
    </layout>
    <!-- end::simple[] -->
</window>