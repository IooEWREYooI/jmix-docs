<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://sourceCodeEditorScreen.caption">
    <layout>
        <!-- tag::suggester[] -->
        <sourceCodeEditor id="sourceCodeEditor"
                          mode="Java"
                          handleTabKey="true"/>
        <!-- end::suggester[] -->
        <!-- tag::validator[] -->
        <sourceCodeEditor id="validatedSourceCodeEditor"
                          handleTabKey="true">
            <validators>
                <regexp regexp="[a-z]*"/>
            </validators>
        </sourceCodeEditor>
        <!-- end::validator[] -->
    </layout>
</window>