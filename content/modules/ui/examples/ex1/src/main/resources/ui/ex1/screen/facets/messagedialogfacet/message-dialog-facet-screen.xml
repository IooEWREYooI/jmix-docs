<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!-- tag::window-start[] -->
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://messageDialogFacetScreen.caption">
    <!-- end::window-start[] -->

    <!-- tag::actions[] -->
    <actions>
        <action id="messageDialogAction"
                caption="Show MessageDialog"/>
    </actions>
    <!-- end::actions[] -->

    <!-- tag::facets-start[] -->
    <facets>
        <!-- end::facets-start[] -->

        <messageDialog id="msgDialog"/>

        <!-- tag::action-message[] -->
        <messageDialog id="messageDialog"
                       caption="Message Dialog"
                       message="Message"
                       modal="true"
                       closeOnClickOutside="true"
                       onAction="messageDialogAction"/>
        <!-- end::action-message[] -->


        <!-- tag::button-message[] -->
        <messageDialog id="messageDialogFacet"
                       caption="Message Dialog"
                       message="Message"
                       onButton="messageDialogBtn"
                       windowMode="MAXIMIZED"/>
        <!-- end::button-message[] -->

        <!-- tag::facets-end[] -->
    </facets>
    <!-- end::facets-end[] -->

    <!-- tag::layout-start[] -->
    <layout>
        <!-- end::layout-start[] -->

        <!-- tag::message-btn[] -->
        <button id="messageDialogBtn"
                caption="Show MessageDialog"/>
        <!-- end::message-btn[] -->

        <!-- tag::layout-end[] -->
    </layout>
    <!-- end::layout-end[] -->

    <!-- tag::window-end[] -->
</window>
        <!-- end::window-end[] -->