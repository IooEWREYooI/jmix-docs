<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://screenSettingsFacetScreen.caption">
    <data readOnly="true">
        <collection id="carsDc"
                    class="ui.ex1.entity.Car">
            <fetchPlan extends="_base"/>
            <loader id="carsDl">
                <query>
                    <![CDATA[select e from uiex1_Car e]]>
                </query>
            </loader>
        </collection>
    </data>

    <!-- tag::facets-start[] -->
    <facets>
        <!-- end::facets-start[] -->
        <dataLoadCoordinator auto="true"/>

        <!-- tag::auto[] -->
        <screenSettings auto="true"/>
        <!-- end::auto[] -->

        <!-- tag::exclude[] -->
        <screenSettings id="settingsFacet" auto="true">
            <components>
                <component id="carsTable" enable="false"/>
            </components>
        </screenSettings>
        <!-- end::exclude[] -->

        <!-- tag::manual[] -->
        <screenSettings id="settingsFacet">
            <components>
                <component id="carsTable"/>
            </components>
        </screenSettings>
        <!-- end::manual[] -->

        <!-- tag::facets-end[] -->
    </facets>
    <!-- end::facets-end[] -->

    <!-- tag::layout[] -->
    <layout expand="carsTable" spacing="true">
        <groupTable id="carsTable"
                    width="100%"
                    dataContainer="carsDc">
            <!-- ... -->
            <!-- end::layout[] -->
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="brand"/>
                <column id="model"/>
                <column id="colorHex"/>
            </columns>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="carsTable.create"/>
                <button id="editBtn" action="carsTable.edit"/>
                <button id="removeBtn" action="carsTable.remove"/>
            </buttonsPanel>
        <!-- tag::layout[] -->
        </groupTable>
    </layout>
    <!-- end::layout[] -->
</window>