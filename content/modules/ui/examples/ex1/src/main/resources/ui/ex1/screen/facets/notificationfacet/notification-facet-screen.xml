<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!-- tag::window-start[] -->
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://notificationFacetScreen.caption">
    <!-- end::window-start[] -->

    <!-- tag::actions[] -->
    <actions>
        <action id="facetAction"
                caption="Action subscription"/>
    </actions>
    <!-- end::actions[] -->

    <!-- tag::facets-start[] -->
    <facets>
        <!-- end::facets-start[] -->

        <notification id="notificationFacet"/>

        <!-- tag::action-notification[] -->
        <notification id="actionNotification"
                      caption="Action performed"
                      type="TRAY"
                      onAction="facetAction"/>
        <!-- end::action-notification[] -->

        <!-- tag::button-notification[] -->
        <notification id="buttonNotification"
                      caption="Button clicked"
                      type="HUMANIZED"
                      onButton="facetBtn"/>
        <!-- end::button-notification[] -->

        <!-- tag::facets-end[] -->
    </facets>
    <!-- end::facets-end[] -->

    <!-- tag::layout-start[] -->
    <layout>
        <!-- end::layout-start[] -->

        <button id="btn"/>

        <!-- tag::action-btn[] -->
        <button id="facetActionBtn"
                action="facetAction"/>
        <!-- end::action-btn[] -->

        <!-- tag::facet-btn[] -->
        <button id="facetBtn"
                caption="Button subscription"/>
        <!-- end::facet-btn[] -->

        <!-- tag::layout-end[] -->
    </layout>
    <!-- end::layout-end[] -->

    <!-- tag::window-end[] -->
</window>
        <!-- end::window-end[] -->