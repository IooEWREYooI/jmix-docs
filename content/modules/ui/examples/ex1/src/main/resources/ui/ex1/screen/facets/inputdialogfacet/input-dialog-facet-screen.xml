<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!-- tag::window-starts[] -->
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://inputDialogFacetScreen.caption">
<!-- end::window-starts[] -->

    <!-- tag::facets-start[] -->
    <facets>
        <!-- end::facets-start[] -->

        <!-- tag::input-dialog-start[] -->
        <inputDialog id="inputDialog"
                     caption="Input Dialog"
                     onButton="inputDialogBtn"
                     dialogActions="OK_CANCEL">
            <!-- end::input-dialog-start[] -->


            <!-- tag::parameters-start[] -->
            <parameters>
                <!-- end::parameters-start[] -->


                <!-- tag::big-decimal-parameter[] -->
                <bigDecimalParameter id="bigDecimalParameter"
                                     caption="Big Decimal Parameter"
                                     defaultValue="55.753"
                                     required="false"/>
                <!-- end::big-decimal-parameter[] -->

                <!-- tag::entity-parameter[] -->
                <entityParameter caption="Entity Parameter"
                                 entityClass="ui.ex1.entity.City"
                                 id="entityParameter"
                                 required="true"/>
                <!-- end::entity-parameter[] -->

                <!-- tag::enum-parameter[] -->
                <enumParameter caption="Enum Parameter"
                               enumClass="ui.ex1.entity.Hobby"
                               id="enumParameter"/>
                <!-- end::enum-parameter[] -->

                <!-- tag::parameters-end[] -->
            </parameters>
            <!-- end::parameters-end[] -->

            <!-- tag::input-dialog-end[] -->
        </inputDialog>
        <!-- end::input-dialog-end[] -->

        <!-- tag::facets-end[] -->
    </facets>
    <!-- end::facets-end[] -->

    <!-- tag::layout-start[] -->
    <layout>
    <!-- tag::layout-end[] -->

    <!-- tag::btn[] -->
        <button id="inputDialogBtn"
                caption="Show InputDialog"/>
    <!-- end::btn[] -->

    <!-- tag::layout-end[] -->
    </layout>
    <!-- end::layout-end[] -->

    <!-- tag::window-end[] -->
</window>
    <!-- end::window-end[] -->
