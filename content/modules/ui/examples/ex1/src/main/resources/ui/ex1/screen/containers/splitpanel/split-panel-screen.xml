<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://splitPanelScreen.caption">
    <layout>
        <hbox>
            <!-- tag::simple-split-horizontal[] -->
            <split height="300px"
                   width="100%"
                   orientation="horizontal">
                <vbox height="100%"
                      width="100%"
                      margin="true">
                    <label value="Label"/>
                    <textField inputPrompt="TextField"/>
                    <hbox spacing="true">
                        <button caption="Button"/>
                        <button caption="Button"/>
                    </hbox>
                </vbox>
                <vbox height="100%"
                      width="100%"
                      margin="true">
                    <label value="Label"/>
                    <textField inputPrompt="TextField"/>
                    <hbox spacing="true">
                        <button caption="Button"/>
                        <button caption="Button"/>
                    </hbox>
                </vbox>
            </split>
            <!-- end::simple-split-horizontal[] -->

            <label width="50px"/>

            <!-- tag::simple-split[] -->
            <split height="300px"
                   width="100%">
                <vbox height="100%"
                      margin="true">
                    <label value="Label"/>
                    <textField inputPrompt="TextField"/>
                    <hbox spacing="true">
                        <button caption="Button"/>
                        <button caption="Button"/>
                    </hbox>
                </vbox>
                <vbox height="100%"
                      margin="true">
                    <label value="Label"/>
                    <textField inputPrompt="TextField"/>
                    <hbox spacing="true">
                        <button caption="Button"/>
                        <button caption="Button"/>
                    </hbox>
                </vbox>
            </split>
            <!-- end::simple-split[] -->
        </hbox>

        <hbox height="300px" spacing="true" width="1200px">
            <groupBox caption="dockMode=LEFT"
                      height="100%"
                      width="100%">
                <!-- tag::dock-left-split[] -->
                <split dockable="true"
                       orientation="horizontal"
                       height="100%"
                       width="100%">
                    <vbox height="100%" width="100%">
                        <label value="Left Label"/>
                        <textField inputPrompt="Left TextField"/>
                        <hbox spacing="true">
                            <button caption="Left Button"/>
                            <button caption="Left Button"/>
                        </hbox>
                    </vbox>
                    <vbox height="100%" width="100%">
                        <label value="Right Label"/>
                        <textField inputPrompt="Right TextField"/>
                        <hbox spacing="true">
                            <button caption="Right Button"/>
                            <button caption="Right Button"/>
                        </hbox>
                    </vbox>
                </split>
                <!-- end::dock-left-split[] -->
            </groupBox>
            <groupBox caption="dockMode=RIGHT"
                      height="100%"
                      width="100%">
                <!-- tag::dock-right-split[] -->
                <split dockable="true"
                       dockMode="RIGHT"
                       orientation="horizontal"
                       height="100%"
                       width="100%">
                    <vbox height="100%" width="100%">
                        <label value="Left Label"/>
                        <textField inputPrompt="Left TextField"/>
                        <hbox spacing="true">
                            <button caption="Left Button"/>
                            <button caption="Left Button"/>
                        </hbox>
                    </vbox>
                    <vbox height="100%" width="100%">
                        <label value="Right Label"/>
                        <textField inputPrompt="Right TextField"/>
                        <hbox spacing="true">
                            <button caption="Right Button"/>
                            <button caption="Right Button"/>
                        </hbox>
                    </vbox>
                </split>
                <!-- end::dock-right-split[] -->
            </groupBox>
        </hbox>

        <hbox height="300px" spacing="true" width="100%">
            <groupBox caption="Position range: 100px - 300px"
                      height="100%"
                      width="100%">
                <!-- tag::min-max-split[] -->
                <split minSplitPosition="100px"
                       maxSplitPosition="300px"
                       orientation="horizontal"
                       pos="200px"
                       height="100%"
                       width="100%">
                    <vbox height="100%" width="100%">
                        <label value="Label"/>
                        <textField inputPrompt="TextField"/>
                        <hbox spacing="true">
                            <button caption="Button"/>
                            <button caption="Button"/>
                        </hbox>
                    </vbox>
                    <vbox height="100%" width="100%">
                        <label value="Label"/>
                        <textField inputPrompt="TextField"/>
                        <hbox spacing="true">
                            <button caption="Button"/>
                            <button caption="Button"/>
                        </hbox>
                    </vbox>
                </split>
                <!-- end::min-max-split[] -->
            </groupBox>
        </hbox>
    </layout>
</window>