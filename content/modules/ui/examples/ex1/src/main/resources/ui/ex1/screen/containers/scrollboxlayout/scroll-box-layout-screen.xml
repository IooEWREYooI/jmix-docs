<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://scrollBoxLayoutScreen.caption">
    <layout>
        <hbox spacing="true">
            <!-- tag::scroll-box-default[] -->
            <scrollBox height="150px"
                       width="300px"
                       spacing="true"
                       caption="ScrollBox">
                <label value="Date"/>
                <dateField/>
                <label value="TextField"/>
                <textField/>
                <label value="TextArea"/>
                <textArea height="130px"/>
                <hbox spacing="true">
                    <button caption="Button"/>
                    <button caption="Button"/>
                </hbox>
            </scrollBox>
            <!-- end::scroll-box-default[] -->

            <label width="20px"/>

            <scrollBox height="200px"
                       width="200px"
                       orientation="horizontal"
                       scrollBars="horizontal"
                       spacing="true">
                <label value="Date"/>
                <dateField/>
                <label value="TextField"/>
                <textField/>
                <label value="TextArea"/>
                <textArea height="130px"/>
                <vbox spacing="true">
                    <button caption="Button"/>
                    <button caption="Button"/>
                </vbox>
            </scrollBox>

            <label width="20px"/>

            <scrollBox height="150px"
                       width="150px"
                       scrollBars="both"
                       spacing="true">
                <label value="Date"/>
                <dateField/>
                <label value="TextField"/>
                <textField/>
                <label value="TextArea"/>
                <textArea height="130px"/>
                <hbox spacing="true">
                    <button caption="Button"/>
                    <button caption="Button"/>
                </hbox>
            </scrollBox>

            <!-- tag::content-min-height[] -->
            <scrollBox height="100%"
                       width="300px"
                       contentMinHeight="300px">
                <label value="Date"/>
                <dateField/>
                <label value="TextField"/>
                <textField/>
                <label value="TextArea"/>
                <textArea height="130px"/>
                <hbox spacing="true">
                    <button caption="Button"/>
                    <button caption="Button"/>
                </hbox>
            </scrollBox>
            <!-- end::content-min-height[] -->

            <!-- tag::content-min-width[] -->
            <scrollBox height="150px"
                       width="100%"
                       contentMinWidth="300px">
                <label value="Date"/>
                <dateField/>
                <label value="TextField"/>
                <textField/>
                <label value="TextArea"/>
                <textArea height="130px"/>
                <hbox spacing="true">
                    <button caption="Button"/>
                    <button caption="Button"/>
                </hbox>
            </scrollBox>
            <!-- end::content-min-width[] -->
        </hbox>
    </layout>
</window>