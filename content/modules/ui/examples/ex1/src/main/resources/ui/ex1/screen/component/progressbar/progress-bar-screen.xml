<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://progressBarScreen.caption">
    <layout>
        <vbox width="350px" spacing="true">
            <label height="100px"/>

            <!-- tag::progress-bar[] -->
            <progressBar id="progressBar" width="100%" />
            <!-- end::progress-bar[] -->

            <label height="100px"/>

            <!-- tag::indeterminate[] -->
            <progressBar indeterminate="true" width="200px"/>
            <!-- end::indeterminate[] -->

            <label height="100px"/>

            <progressBar indeterminate="true"
                         stylename="indeterminate-circle"/>

            <label height="100px"/>
        </vbox>
    </layout>
</window>