<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://extensionTaskForm.caption">
    <dialogMode width="AUTO" height="AUTO"/>
    <layout expand="actionsPanel" spacing="true">
            <form>
                <entityPicker id="orderEntityPicker"
                              metaClass="smpl_Order"
                              caption="msg://orderEntityPicker1.caption" editable="false">
                    <actions>
                        <action id="lookup" type="entity_lookup"/>
                        <action id="clear" type="entity_clear"/>
                    </actions>
                </entityPicker>
                <textField id="priority" caption="msg://priority.caption" editable="false"/>
                <textArea id="orderComment" caption="msg://orderComment.caption"/>
            </form>
            <hbox id="actionsPanel" spacing="true">
                <button id="completeTaskBtn" caption="msg://completeTaskBtn2.caption"/>
            </hbox>
        </layout>
</window>