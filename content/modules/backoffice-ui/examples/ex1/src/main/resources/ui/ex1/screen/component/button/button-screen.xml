<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://buttonScreen.caption">
    <data>
        <collection id="usersDc" class="ui.ex1.entity.User">
            <fetchPlan extends="_local"/>
            <loader id="usersDl">
                <query>
                    <![CDATA[select e from uiex1_User e]]>
                </query>
            </loader>
        </collection>
    </data>
    <!-- tag::action-1[] -->
    <actions>
        <action id="someAction"
                caption="Click Me!"/>
    </actions>
    <layout>
        <!-- end::action-1[] -->
        <hbox spacing="true">
            <!-- tag::button-1[] -->
            <button id="helloButton"
                    caption="msg://button.caption"
                    description="msg://button.description"/>
            <!-- end::button-1[] -->

            <!-- tag::button-icon[] -->
            <button id="saveButton"
                    caption="Save"
                    icon="SAVE"/>
            <!-- end::button-icon[] -->

            <!-- tag::shortcut[] -->
            <button id="saveButton2"
                    description="Save"
                    icon="SAVE"
                    shortcut="ALT-S"/>
            <!-- end::shortcut[] -->

            <!-- tag::action-2[] -->
            <button action="someAction"/>
            <!-- end::action-2[] -->
            <button id="dependentBtn" caption="Dependent button"/>
            <button id="mainBtn" caption="Main button"/>
        </hbox>

        <!-- tag::expand-ratio[] -->
        <hbox width="500px" expand="button1" spacing="true">
            <button id="button1" box.expandRatio="1"/>
            <button id="button2" width="100%" box.expandRatio="3"/>
            <button id="button3" width="100%" box.expandRatio="2"/>
        </hbox>
        <!-- end::expand-ratio[] -->

        <!-- tag::action-3[] -->
        <table id="usersTable"
               width="100%"
               dataContainer="usersDc">
            <actions>
                <action id="create"
                        type="create"/>
            </actions>
            <buttonsPanel>
                <button id="usersTableCreateBtn"
                        action="usersTable.create"/>
            </buttonsPanel>
            <!-- end::action-3[] -->
            <columns>
                <column id="username"/>
                <column id="email"/>
            </columns>
            <!-- tag::table-end[] -->
        </table>
        <!-- end::table-end[] -->
        <!-- tag::layout-end[] -->
    </layout>
    <!-- end::layout-end[] -->
</window>
