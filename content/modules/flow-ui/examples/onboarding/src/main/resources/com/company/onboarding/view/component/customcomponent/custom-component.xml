<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:addressComponent="http://io.jmix.flowuisampler/address-component.xsd">
    <data>
        <instance class="com.company.onboarding.entity.Employee" id="employeeDc">
            <fetchPlan extends="_base"/>
            <loader id="employeeDl"/>
            <instance id="addressDc" property="address"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <select id="employeeSelect" label="Employee" itemsContainer="employeesDc"
                helperText="Select an employee to display"/>
        <tabSheet id="tabSheet" width="100%">
            <tab id="declarative" label="Declaratively added component">
                <addressComponent:address id="addressComponent" dataContainer="addressDc"/>
            </tab>
        </tabSheet>
    </layout>
</view>